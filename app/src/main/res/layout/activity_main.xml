<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mllweb.some.widget.ScrollViewPager
        android:id="@+id/tabPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLayoutSplitLine" />

    <View
        android:id="@id/bottomLayoutSplitLine"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@+id/bottomLayout"
        android:background="#d5d5d5" />

    <LinearLayout
        android:id="@id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottomTabLayoutHeight"
        android:layout_alignParentBottom="true"
        android:background="@color/bottomTab"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/homeLayout"
            android:layout_width="270px"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomTabIconHeight"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/homeText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomTabTextHeight"
                android:gravity="center"
                android:text="@string/home"
                android:textSize="@dimen/bottomTabTextSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/followLayout"
            android:layout_width="270px"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/followIcon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomTabIconHeight"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/followText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomTabTextHeight"
                android:gravity="center"
                android:text="@string/follow"
                android:textSize="@dimen/bottomTabTextSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/findLayout"
            android:layout_width="270px"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/findIcon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomTabIconHeight"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/findText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomTabTextHeight"
                android:gravity="center"
                android:text="@string/find"
                android:textSize="@dimen/bottomTabTextSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mineLayout"
            android:layout_width="270px"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mineIcon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomTabIconHeight"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/mineText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomTabTextHeight"
                android:gravity="center"
                android:text="@string/mine"
                android:textSize="@dimen/bottomTabTextSize" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
